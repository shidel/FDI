uchar NAME(scancodetable)[] = {

//* 1 */ PUNCT(0x02, 'ü', '1')
 /* 2 */ PUNCT(0x03, '-', '2')
 /* 3 */ PUNCT(0x04, '/', '3')
 /* 4 */ PUNCT(0x05, '"', '4')
 /* 5 */ PUNCT(0x06, ':', '5')
 /* 6 */ PUNCT(0x07, ',', '6')
 /* 7 */ PUNCT(0x08, '.', '7')
//* 8 */ PUNCT(0x09, '_', '8')
//* 9 */ PUNCT(0x0A, '?', '9')
//* 0 */ PUNCT(0x0B, '%', '0')
//* - */ PUNCT(0x0C, '!', '=')
//* = */ PUNCT(0x0D, ';', '\')

 /* q */ ALPHA(0x10, '©', '‰')
 /* w */ ALPHA(0x11, 'æ', '–')
 /* e */ ALPHA(0x12, 'ã', '“')
 /* r */ ALPHA(0x13, 'ª', 'Š')
 /* t */ ALPHA(0x14, '¥', '…')
 /* y */ ALPHA(0x15, '­', '')
 /* u */ ALPHA(0x16, '£', 'ƒ')
 /* i */ ALPHA(0x17, 'è', '˜')
 /* o */ ALPHA(0x18, 'é', '™')
 /* p */ ALPHA(0x19, '§', '‡')
 /* [ */ ALPHA(0x1A, 'å', '•')
 /* ] */ ALPHA(0x1B, 'ê', 'š')

 /* a */ ALPHA(0x1E, 'ä', '”')
 /* s */ ALPHA(0x1F, 'ë', '›')
 /* d */ ALPHA(0x20, '¢', '‚')
 /* f */ ALPHA(0x21, ' ', '€')
 /* g */ ALPHA(0x22, '¯', '')
 /* h */ ALPHA(0x23, 'à', '')
 /* j */ ALPHA(0x24, '®', '')
 /* k */ ALPHA(0x25, '«', '‹')
 /* l */ ALPHA(0x26, '¤', '„')
 /* ; */ ALPHA(0x27, '¦', '†')
 /* ' */ ALPHA(0x28, 'í', '')

 /* ~ */ ALPHA(0x29, '|', '+')
 /* \ */ PUNCT(0x2B, ')','(')

 /* z */ ALPHA(0x2C, 'ï', 'Ÿ')
 /* x */ ALPHA(0x2D, 'ç', '—')
 /* c */ ALPHA(0x2E, 'á', '‘')
 /* v */ ALPHA(0x2F, '¬', 'Œ')
 /* b */ ALPHA(0x30, '¨', 'ˆ')
 /* n */ ALPHA(0x31, 'â', '’')
 /* m */ ALPHA(0x32, 'ì', 'œ')
 /* , */ ALPHA(0x33, '¡', '')
 /* . */ ALPHA(0x34, 'î', '')
//* / */ PUNCT(0x35, 'ñ', 'ğ')
	 0
};

